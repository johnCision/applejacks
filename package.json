{
	"name": "@johncision/applejacks",
	"version": "5.0.2",
	"description": "UI Framework",
	"type": "module",
	"main": "./src/index.js",
	"exports": {
		".": "./src/index.js"
	},
	"files": [
		"src/**/*.js",
		"templates/**/*.html"
	],
	"scripts": {
		"lint": "eslint --quiet .",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
		"x-test": "mocha ",
		"x-coverage": "c8 --lines 0 --functions 0 --branches 0 --check-coverage --all --exclude 'spec/**' -x 'coverage/**' -x 'test/**' npm run test"
	},
	"eslintConfig": {
		"extends": [
			"@johncision/eslint-config/module"
		],
		"ignorePatterns": [ "spec/**", "test/**" ],
		"env": {
			"node": false,
			"browser": true
		},
		"rules": {
			"class-methods-use-this": "warn",
			"no-empty-function": "warn",
			"fp/no-nil": "off",
			"immutable/no-this": "off",
			"fp/no-unused-expression": "off",
			"no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_",
					"varsIgnorePattern": "^_"
				}
			],
			"spellcheck/spell-checker": [
				"error",
				{
					"minLength": 4,
					"skipWords": [
						"checkbox",
						"lang",
						"href"
					]
				}
			]
		}
	},
	"jest": {
		"verbose": true,
		"testEnvironment": "jsdom",
		"collectCoverage": true,
		"coverageDirectory": "coverage",
		"coverageProvider": "v8",
		"moduleFileExtensions": [
			"js"
		],
		"testMatch": [
			"**/test/*.js"
		],
		"transform": {}
	},
	"mocha": {
		"spec": [
			"spec/*.spec.js"
		],
		"ignore": [ "test/**" ],
		"watch": false,
		"sort": false,
		"forbitOnly": true,
		"check-leaks": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/johnCision/applejacks.git"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/johnCision/applejacks/issues"
	},
	"homepage": "https://github.com/johnCision/applejacks#readme",
	"devDependencies": {
		"@jest/globals": "^27.3.1",
		"@johncision/eslint-config": "^3.0.9",
		"c8": "^7.10.0",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"eslint": "^8.0.1",
		"eslint-plugin-fp": "^2.3.0",
		"eslint-plugin-immutable": "^1.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-no-loops": "^0.3.0",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-spellcheck": "^0.0.19",
		"jest": "^28.0.1",
		"mocha": "^9.1.3"
	}
}
